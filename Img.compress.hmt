<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Free online image compression tool to optimize your images while maintaining quality. Reduce file size for faster websites and apps.">
    <meta name="keywords" content="image compression, optimize images, reduce image size, image optimizer, online tool">
    <title>ImageCompressPro - Optimize Your Images Online</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary: #4361ee;
            --secondary: #3a0ca3;
            --accent: #7209b7;
            --light: #f8f9fa;
            --dark: #212529;
            --success: #4cc9f0;
            --warning: #f72585;
            --gray: #6c757d;
            --card-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            --gradient: linear-gradient(135deg, #4361ee 0%, #3a0ca3 100%);
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }
        
        body {
            background: var(--gradient);
            color: var(--dark);
            line-height: 1.6;
            min-height: 100vh;
            padding: 20px;
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
        }
        
        header {
            text-align: center;
            padding: 30px 0;
            color: white;
        }
        
        header h1 {
            font-size: 2.8rem;
            margin-bottom: 10px;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
            font-weight: 700;
        }
        
        header p {
            font-size: 1.2rem;
            max-width: 800px;
            margin: 0 auto;
            opacity: 0.9;
            font-weight: 300;
        }
        
        .card {
            background: white;
            border-radius: 20px;
            box-shadow: var(--card-shadow);
            padding: 30px;
            margin-bottom: 30px;
            transition: transform 0.3s ease;
        }
        
        .card:hover {
            transform: translateY(-5px);
        }
        
        .main-content {
            display: grid;
            grid-template-columns: 1fr;
            gap: 30px;
        }
        
        @media (min-width: 992px) {
            .main-content {
                grid-template-columns: 1fr 1fr;
            }
        }
        
        .upload-area {
            border: 3px dashed var(--primary);
            border-radius: 15px;
            padding: 50px 20px;
            text-align: center;
            transition: all 0.3s ease;
            cursor: pointer;
            background: var(--light);
            position: relative;
            overflow: hidden;
        }
        
        .upload-area:hover {
            background: #e9ecef;
            border-color: var(--secondary);
        }
        
        .upload-area i {
            font-size: 60px;
            color: var(--primary);
            margin-bottom: 20px;
        }
        
        .upload-area h3 {
            margin-bottom: 15px;
            color: var(--dark);
            font-weight: 600;
        }
        
        .upload-area p {
            color: var(--gray);
            margin-bottom: 20px;
        }
        
        .btn {
            display: inline-block;
            background: var(--gradient);
            color: white;
            padding: 14px 30px;
            border-radius: 50px;
            border: none;
            cursor: pointer;
            font-size: 16px;
            font-weight: 600;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(67, 97, 238, 0.3);
        }
        
        .btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(67, 97, 238, 0.4);
        }
        
        .btn:active {
            transform: translateY(0);
        }
        
        .btn:disabled {
            background: var(--gray);
            cursor: not-allowed;
        }
        
        .compression-controls {
            margin: 30px 0;
        }
        
        .control-group {
            margin-bottom: 25px;
        }
        
        .control-group label {
            display: block;
            margin-bottom: 10px;
            font-weight: 600;
            color: var(--dark);
        }
        
        .slider-container {
            display: flex;
            align-items: center;
            gap: 15px;
        }
        
        .slider {
            flex: 1;
            -webkit-appearance: none;
            height: 10px;
            border-radius: 5px;
            background: #dee2e6;
            outline: none;
        }
        
        .slider::-webkit-slider-thumb {
            -webkit-appearance: none;
            appearance: none;
            width: 22px;
            height: 22px;
            border-radius: 50%;
            background: var(--primary);
            cursor: pointer;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        }
        
        .slider-value {
            width: 60px;
            text-align: center;
            font-weight: 600;
            color: var(--primary);
            background: rgba(67, 97, 238, 0.1);
            padding: 5px 10px;
            border-radius: 20px;
        }
        
        .preview-container {
            display: grid;
            grid-template-columns: 1fr;
            gap: 25px;
            margin-top: 25px;
        }
        
        @media (min-width: 768px) {
            .preview-container {
                grid-template-columns: 1fr 1fr;
            }
        }
        
        .preview-box {
            text-align: center;
        }
        
        .preview-box h4 {
            margin-bottom: 15px;
            color: var(--dark);
            font-weight: 600;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }
        
        .preview-img {
            max-width: 100%;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
            height: 250px;
            object-fit: contain;
            background: var(--light);
            padding: 15px;
            border: 1px solid #eee;
        }
        
        .file-info {
            background: var(--light);
            padding: 15px;
            border-radius: 12px;
            margin-top: 15px;
            text-align: center;
            border: 1px solid #eee;
        }
        
        .stats {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-top: 25px;
        }
        
        .stat-box {
            background: var(--light);
            padding: 20px;
            border-radius: 12px;
            text-align: center;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
            border: 1px solid #eee;
        }
        
        .stat-box h5 {
            color: var(--gray);
            font-size: 14px;
            margin-bottom: 10px;
            font-weight: 500;
        }
        
        .stat-box p {
            font-size: 20px;
            font-weight: 700;
            color: var(--primary);
        }
        
        .ad-container {
            background: var(--light);
            border-radius: 15px;
            padding: 25px;
            text-align: center;
            margin: 40px 0;
            min-height: 280px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            box-shadow: var(--card-shadow);
        }
        
        .ad-container h3 {
            color: var(--dark);
            margin-bottom: 15px;
        }
        
        .ad-container p {
            color: var(--gray);
            margin-bottom: 20px;
        }
        
        .ad-placeholder {
            width: 100%;
            max-width: 300px;
            height: 250px;
            background: #e9ecef;
            border-radius: 12px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            color: var(--gray);
            margin: 0 auto;
            border: 2px dashed #ced4da;
        }
        
        .ad-placeholder i {
            font-size: 40px;
            margin-bottom: 15px;
            color: var(--primary);
        }
        
        footer {
            text-align: center;
            padding: 30px 0;
            color: white;
            margin-top: 40px;
        }
        
        footer p {
            opacity: 0.8;
            font-weight: 300;
        }
        
        .loading {
            display: none;
            text-align: center;
            margin: 30px 0;
        }
        
        .loading-spinner {
            border: 5px solid #f3f3f3;
            border-top: 5px solid var(--primary);
            border-radius: 50%;
            width: 50px;
            height: 50px;
            animation: spin 1s linear infinite;
            margin: 0 auto 20px;
        }
        
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        
        .compression-notes {
            background: #fff4e5;
            padding: 20px;
            border-radius: 12px;
            margin-top: 25px;
            border-left: 4px solid #ffa94d;
        }
        
        .compression-notes h4 {
            color: #e67700;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .logo {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            margin-bottom: 10px;
        }
        
        .logo-icon {
            font-size: 2.5rem;
            color: white;
        }
        
        .feature-badge {
            display: inline-block;
            background: rgba(255, 255, 255, 0.2);
            color: white;
            padding: 5px 15px;
            border-radius: 20px;
            font-size: 0.9rem;
            margin: 5px 0;
        }
        
        @media (max-width: 768px) {
            header h1 {
                font-size: 2.2rem;
            }
            
            header p {
                font-size: 1rem;
            }
            
            .card {
                padding: 20px;
            }
            
            .upload-area {
                padding: 30px 15px;
            }
            
            .stats {
                grid-template-columns: 1fr;
            }
            
            .btn {
                padding: 12px 25px;
            }
        }
        
        @media (max-width: 480px) {
            header h1 {
                font-size: 1.8rem;
            }
            
            .slider-container {
                flex-direction: column;
                align-items: stretch;
                gap: 10px;
            }
            
            .slider-value {
                align-self: center;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <div class="logo">
                <i class="fas fa-compress-alt logo-icon"></i>
                <h1>ImageCompressPro</h1>
            </div>
            <p>Optimize your images without sacrificing quality. Fast, easy, and completely free!</p>
            <div>
                <span class="feature-badge"><i class="fas fa-bolt"></i> Fast Processing</span>
                <span class="feature-badge"><i class="fas fa-shield-alt"></i> Secure & Private</span>
                <span class="feature-badge"><i class="fas fa-mobile-alt"></i> Responsive</span>
            </div>
        </header>
        
        <div class="main-content">
            <div class="card">
                <h2><i class="fas fa-upload"></i> Upload Your Image</h2>
                <p>Select an image to compress (JPEG, PNG, GIF supported)</p>
                
                <div class="upload-area" id="dropArea">
                    <i class="fas fa-cloud-upload-alt"></i>
                    <h3>Drag & Drop Your Image Here</h3>
                    <p>or</p>
                    <label for="fileInput" class="btn"><i class="fas fa-file-image"></i> Choose File</label>
                    <input type="file" id="fileInput" accept="image/*" style="display: none;">
                </div>
                
                <div class="compression-controls">
                    <div class="control-group">
                        <label for="compressionLevel"><i class="fas fa-sliders-h"></i> Compression Level</label>
                        <div class="slider-container">
                            <input type="range" min="0" max="100" value="75" class="slider" id="compressionLevel">
                            <span class="slider-value" id="compressionValue">75%</span>
                        </div>
                    </div>
                    
                    <div class="control-group">
                        <label for="imageQuality"><i class="fas fa-star"></i> Image Quality</label>
                        <div class="slider-container">
                            <input type="range" min="10" max="100" value="85" class="slider" id="imageQuality">
                            <span class="slider-value" id="qualityValue">85%</span>
                        </div>
                    </div>
                    
                    <div class="control-group">
                        <label for="maxWidth"><i class="fas fa-arrows-alt-h"></i> Max Width (px)</label>
                        <div class="slider-container">
                            <input type="range" min="100" max="2000" value="1200" class="slider" id="maxWidth">
                            <span class="slider-value" id="widthValue">1200px</span>
                        </div>
                    </div>
                </div>
                
                <button id="compressBtn" class="btn" disabled>
                    <i class="fas fa-compress-alt"></i> Compress Image
                </button>
                
                <div class="loading" id="loadingIndicator">
                    <div class="loading-spinner"></div>
                    <p>Compressing your image...</p>
                </div>
            </div>
            
            <div class="card">
                <h2><i class="fas fa-chart-line"></i> Results</h2>
                <p>Preview and download your compressed image</p>
                
                <div class="preview-container">
                    <div class="preview-box">
                        <h4><i class="fas fa-file-image"></i> Original Image</h4>
                        <img src="https://via.placeholder.com/400x250/ffffff/666666?text=Original+Image" alt="Original image preview" class="preview-img" id="originalPreview">
                        <div class="file-info" id="originalInfo">
                            <p>No file selected</p>
                        </div>
                    </div>
                    
                    <div class="preview-box">
                        <h4><i class="fas fa-file-archive"></i> Compressed Image</h4>
                        <img src="https://via.placeholder.com/400x250/ffffff/666666?text=Compressed+Image" alt="Compressed image preview" class="preview-img" id="compressedPreview">
                        <div class="file-info" id="compressedInfo">
                            <p>Compressed image will appear here</p>
                        </div>
                    </div>
                </div>
                
                <div class="stats">
                    <div class="stat-box">
                        <h5>Original Size</h5>
                        <p id="originalSize">0 KB</p>
                    </div>
                    <div class="stat-box">
                        <h5>Compressed Size</h5>
                        <p id="compressedSize">0 KB</p>
                    </div>
                    <div class="stat-box">
                        <h5>Size Reduced</h5>
                        <p id="sizeReduced">0%</p>
                    </div>
                    <div class="stat-box">
                        <h5>Download</h5>
                        <p><a href="#" id="downloadLink" style="color: var(--primary);"><i class="fas fa-download"></i> Download</a></p>
                    </div>
                </div>
                
                <div class="compression-notes">
                    <h4><i class="fas fa-lightbulb"></i> Compression Tips</h4>
                    <p>Higher compression levels and lower quality settings will result in smaller file sizes but may reduce image quality. For web use, we recommend keeping quality above 70%.</p>
                </div>
            </div>
        </div>
        
        <div class="ad-container">
            <h3>Advertisement</h3>
            <p>Please support us by disabling your ad blocker</p>
            <div class="ad-placeholder">
                <i class="fas fa-ad"></i>
                <p>Ad Space (300x250)</p>
                <!-- Google AdSense code will be placed here -->
                <!-- Replace with your AdSense code -->
                <!-- 
                <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=YOUR-AD-UNIT-ID"
                     crossorigin="anonymous"></script>
                <ins class="adsbygoogle"
                     style="display:block"
                     data-ad-client="YOUR-AD-UNIT-ID"
                     data-ad-slot="XXXXXXXXXX"
                     data-ad-format="auto"
                     data-full-width-responsive="true"></ins>
                <script>
                     (adsbygoogle = window.adsbygoogle || []).push({});
                </script>
                -->
            </div>
        </div>
        
        <footer>
            <p>&copy; 2023 ImageCompressPro. All rights reserved.</p>
            <p>This tool is built with HTML5 Canvas and JavaScript for client-side image compression.</p>
        </footer>
    </div>

    <script>
        // DOM Elements
        const fileInput = document.getElementById('fileInput');
        const dropArea = document.getElementById('dropArea');
        const compressionLevel = document.getElementById('compressionLevel');
        const compressionValue = document.getElementById('compressionValue');
        const imageQuality = document.getElementById('imageQuality');
        const qualityValue = document.getElementById('qualityValue');
        const maxWidth = document.getElementById('maxWidth');
        const widthValue = document.getElementById('widthValue');
        const compressBtn = document.getElementById('compressBtn');
        const originalPreview = document.getElementById('originalPreview');
        const compressedPreview = document.getElementById('compressedPreview');
        const originalInfo = document.getElementById('originalInfo');
        const compressedInfo = document.getElementById('compressedInfo');
        const originalSize = document.getElementById('originalSize');
        const compressedSize = document.getElementById('compressedSize');
        const sizeReduced = document.getElementById('sizeReduced');
        const downloadLink = document.getElementById('downloadLink');
        const loadingIndicator = document.getElementById('loadingIndicator');
        
        // Variables to store file data
        let originalFile = null;
        let compressedBlob = null;
        
        // Update slider values
        compressionLevel.addEventListener('input', () => {
            compressionValue.textContent = `${compressionLevel.value}%`;
        });
        
        imageQuality.addEventListener('input', () => {
            qualityValue.textContent = `${imageQuality.value}%`;
        });
        
        maxWidth.addEventListener('input', () => {
            widthValue.textContent = `${maxWidth.value}px`;
        });
        
        // Handle file selection
        fileInput.addEventListener('change', handleFileSelect);
        dropArea.addEventListener('click', () => fileInput.click());
        
        // Drag and drop functionality
        ['dragenter', 'dragoover', 'dragleave', 'drop'].forEach(eventName => {
            dropArea.addEventListener(eventName, preventDefaults, false);
        });
        
        function preventDefaults(e) {
            e.preventDefault();
            e.stopPropagation();
        }
        
        ['dragenter', 'dragover'].forEach(eventName => {
            dropArea.addEventListener(eventName, highlight, false);
        });
        
        ['dragleave', 'drop'].forEach(eventName => {
            dropArea.addEventListener(eventName, unhighlight, false);
        });
        
        function highlight() {
            dropArea.style.borderColor = var(--secondary);
            dropArea.style.backgroundColor = '#e9ecef';
        }
        
        function unhighlight() {
            dropArea.style.borderColor = var(--primary);
            dropArea.style.backgroundColor = '#f8f9fa';
        }
        
        dropArea.addEventListener('drop', handleDrop, false);
        
        function handleDrop(e) {
            const dt = e.dataTransfer;
            const files = dt.files;
            if (files.length) {
                handleFiles(files);
            }
        }
        
        function handleFileSelect(e) {
            const files = e.target.files;
            if (files.length) {
                handleFiles(files);
            }
        }
        
        function handleFiles(files) {
            originalFile = files[0];
            
            // Check if file is an image
            if (!originalFile.type.match('image.*')) {
                alert('Please select an image file (JPEG, PNG, GIF, etc.)');
                return;
            }
            
            // Enable compress button
            compressBtn.disabled = false;
            
            // Display original image
            const reader = new FileReader();
            reader.onload = function(e) {
                originalPreview.src = e.target.result;
                originalInfo.innerHTML = `<p><strong>Name:</strong> ${originalFile.name}</p>
                                         <p><strong>Type:</strong> ${originalFile.type}</p>`;
                originalSize.textContent = formatFileSize(originalFile.size);
            };
            reader.readAsDataURL(originalFile);
            
            // Reset compressed image info
            compressedPreview.src = 'https://via.placeholder.com/400x250/ffffff/666666?text=Compressed+Image';
            compressedInfo.innerHTML = '<p>Compressed image will appear here</p>';
            compressedSize.textContent = '0 KB';
            sizeReduced.textContent = '0%';
            downloadLink.href = '#';
        }
        
        // Compress image
        compressBtn.addEventListener('click', compressImage);
        
        function compressImage() {
            if (!originalFile) return;
            
            // Show loading indicator
            loadingIndicator.style.display = 'block';
            
            // Use setTimeout to allow the UI to update before compression starts
            setTimeout(() => {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const img = new Image();
                    img.onload = function() {
                        // Calculate new dimensions
                        let width = img.width;
                        let height = img.height;
                        const maxWidthValue = parseInt(maxWidth.value);
                        
                        if (width > maxWidthValue) {
                            height = Math.round((height * maxWidthValue) / width);
                            width = maxWidthValue;
                        }
                        
                        // Create canvas
                        const canvas = document.createElement('canvas');
                        canvas.width = width;
                        canvas.height = height;
                        const ctx = canvas.getContext('2d');
                        
                        // Draw image on canvas
                        ctx.drawImage(img, 0, 0, width, height);
                        
                        // Get compression parameters
                        const quality = parseInt(imageQuality.value) / 100;
                        
                        // Convert to blob with compression
                        canvas.toBlob(function(blob) {
                            compressedBlob = blob;
                            
                            // Create URL for compressed image
                            const compressedUrl = URL.createObjectURL(blob);
                            
                            // Display compressed image
                            compressedPreview.src = compressedUrl;
                            compressedInfo.innerHTML = `<p><strong>Type:</strong> image/jpeg</p>`;
                            compressedSize.textContent = formatFileSize(blob.size);
                            
                            // Calculate size reduction
                            const reduction = ((originalFile.size - blob.size) / originalFile.size * 100).toFixed(1);
                            sizeReduced.textContent = `${reduction}%`;
                            
                            // Set download link
                            downloadLink.href = compressedUrl;
                            downloadLink.download = `compressed-${originalFile.name.split('.')[0]}.jpg`;
                            
                            // Hide loading indicator
                            loadingIndicator.style.display = 'none';
                        }, 'image/jpeg', quality);
                    };
                    img.src = e.target.result;
                };
                reader.readAsDataURL(originalFile);
            }, 100);
        }
        
        // Helper function to format file size
        function formatFileSize(bytes) {
            if (bytes < 1024) {
                return bytes + ' bytes';
            } else if (bytes < 1048576) {
                return (bytes / 1024).toFixed(1) + ' KB';
            } else {
                return (bytes / 1048576).toFixed(1) + ' MB';
            }
        }
    </script>
</body>
</html>
